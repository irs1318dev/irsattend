


Screen {
    layout: vertical;
}

#main-container {
    height: 1fr;
    layout: horizontal;
}
#camera-container {
    width: 70%;
    border: round white;
    padding: 1;
}
#camera-view {
    width: 100%;
    height: 100%;
    content-align: center middle;
    overflow: hidden;
}
#log-container {
    width: 30%;
    padding: 0 1;
    border: round white;
}
.log-title {
    width: 100%;
    text-align: center;
    background: $primary;
    color: $text;
}